@using Library.Areas.Admin.Models.Branches
@using Library.Models.Catalog
@{
    ViewBag.Title = "LIBRARY";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    int count = 0;
}
<section class="home-slider owl-carousel">
 
    @foreach (var branch in Model.Branches)
    {
        count++;
        <div class="slider-item" style="background-image: url('..@branch.ImageURL') ;">
            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-lg-7 text-center col-sm-12 element-animate">
                        <h1 class="mb-4"><span><a asp-controller="Branch" asp-action="Detail" asp-route-id="@branch.Id">@branch.Name</a></span></h1>
                        <p class="mb-5 w-75" style="background-color: rgba(0, 0, 0, 0.5); border-radius: 10px">@branch.Description</p>                   
                    </div>
                </div>
            </div>
        </div>

    }
</section>
<!-- END slider -->


<section class="section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-4 element-animate ">
                <div class="media block-6 d-block text-center">
                    <div class="icon mb-3"><span class="ion-bookmark text-primary"></span></div>
                    
                    <div class="media-body">
                        <h3 class="heading">@Model.TotalAssets ASSETS</h3>
                        <p>The Library aims to provide a user-friendly multimedia resource center for people. </p>
                    </div>
                </div>

            </div>
            <div class="col-md-6 col-lg-4 element-animate ">
                <div class="media block-6 d-block text-center">
                    <div class="icon mb-3"><span class="ion-heart text-primary"></span></div>
                    <div class="media-body">
                        <h3 class="heading">@Model.TotalPatron CUSTOMERS</h3>
                        <p>School library is helpful to everyone whether its students, teachers or any other staff member.</p>
                    </div>
                </div>

            </div>
            <div class="col-md-6 col-lg-4 element-animate ">
                <div class="media block-6 d-block text-center">
                    <div class="icon mb-3"><span class="ion-leaf text-primary"></span></div>
                    <div class="media-body">
                        <h3 class="heading">@count BRANCHES </h3>
                        <p>The design, modern tools, and strategies of libraries change with the changing times.</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


